<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CKLBanking">

        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_GOOGLE_MAPS_API_KEY_HERE"/>

        <!-- Main Activity -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="false" />

        <!-- Splash Activity - LAUNCHER -->
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.CKLBanking.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.CKLBanking" />

        <!-- Register Activity -->
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.CKLBanking" />

        <!-- Forgot Password Activity -->
        <activity
            android:name=".activities.ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.CKLBanking" />

        <!-- Customer Flow Activities -->
        <activity
            android:name=".activities.CustomerDashboardActivity"
            android:exported="false" />

        <activity
            android:name=".activities.CustomerProfileActivity"
            android:exported="false" />

        <activity
            android:name=".activities.EditProfileActivity"
            android:exported="false" />

        <activity
            android:name=".activities.AccountDetailActivity"
            android:exported="false" />

        <activity
            android:name=".activities.TransactionHistoryActivity"
            android:exported="false" />

        <activity
            android:name=".activities.TransactionDetailActivity"
            android:exported="false" />

        <activity
            android:name=".activities.TransferMoneyActivity"
            android:exported="false" />

        <activity
            android:name=".activities.DepositActivity"
            android:exported="false" />

        <activity
            android:name=".activities.WithdrawActivity"
            android:exported="false" />

        <activity
            android:name=".activities.OTPVerificationActivity"
            android:exported="false" />

        <activity
            android:name=".activities.EKYCActivity"
            android:exported="false" />

        <activity
            android:name=".activities.UtilitiesActivity"
            android:exported="false" />

        <activity
            android:name=".activities.BranchLocatorActivity"
            android:exported="false" />

        <activity
            android:name=".activities.SettingsActivity"
            android:exported="false" />

        <activity
            android:name=".activities.NotificationsActivity"
            android:exported="false" />

    </application>

</manifest>