<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:title="Tạo tài khoản"
            app:titleTextColor="@color/white"/>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Customer Selection -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutCustomerEmail"
                        style="@style/InputField"
                        android:hint="Email khách hàng"
                        app:helperText="Nhập email khách hàng để tìm kiếm">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editCustomerEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSearchCustomer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tìm kiếm khách hàng"
                        android:layout_marginTop="8dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"/>

                    <TextView
                        android:id="@+id/textCustomerInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chưa chọn khách hàng"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginTop="12dp"
                        android:visibility="gone"/>

                    <!-- Account Type -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutAccountType"
                        style="@style/InputField"
                        android:hint="Loại tài khoản"
                        android:layout_marginTop="16dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editAccountType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Account Number -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutAccountNumber"
                        style="@style/InputField"
                        android:hint="Số tài khoản"
                        android:layout_marginTop="16dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editAccountNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Initial Balance -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutBalance"
                        style="@style/InputField"
                        android:hint="Số dư ban đầu (VNĐ)"
                        android:layout_marginTop="16dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editBalance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Interest Rate (for saving account) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutInterestRate"
                        style="@style/InputField"
                        android:hint="Lãi suất (%/năm)"
                        app:helperText="Chỉ áp dụng cho tài khoản tiết kiệm"
                        android:layout_marginTop="16dp"
                        android:visibility="gone">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editInterestRate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Monthly Payment (for mortgage account) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutMonthlyPayment"
                        style="@style/InputField"
                        android:hint="Tiền trả hàng tháng (VNĐ)"
                        app:helperText="Chỉ áp dụng cho tài khoản vay thế chấp"
                        android:layout_marginTop="16dp"
                        android:visibility="gone">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editMonthlyPayment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCreateAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tạo tài khoản"
                        android:layout_marginTop="24dp"
                        android:enabled="false"/>

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>


