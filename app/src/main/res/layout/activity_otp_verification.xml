<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:title="Xác thực OTP"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_back"/>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/info"
            android:alpha="0.9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_verified"
                    app:tint="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xác thực giao dịch"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/otpMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã OTP đã được gửi đến số điện thoại\n+84 *** *** 789"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Transaction Info -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/transactionInfoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin giao dịch"
                    style="@style/TextSubtitle"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Số tiền:"
                        style="@style/TextBody"/>

                    <TextView
                        android:id="@+id/transactionAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,000,000 ₫"
                        android:textColor="@color/primary"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Người nhận:"
                        style="@style/TextBody"/>

                    <TextView
                        android:id="@+id/transactionRecipient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nguyễn Văn B"
                        style="@style/TextBody"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- OTP Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập mã OTP"
            style="@style/TextSubtitle"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otp1"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/ic_launcher_background"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otp2"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/ic_launcher_background"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otp3"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/ic_launcher_background"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otp4"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/ic_launcher_background"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otp5"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/ic_launcher_background"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otp6"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/ic_launcher_background"/>
        </LinearLayout>

        <!-- Timer and Resend -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã hết hạn sau: "
                    style="@style/TextCaption"/>

                <TextView
                    android:id="@+id/otpTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02:00"
                    android:textColor="@color/error"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | "
                    style="@style/TextCaption"/>

                <TextView
                    android:id="@+id/btnResendOtp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gửi lại"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
            </LinearLayout>

            <!-- Rate limit info -->
            <TextView
                android:id="@+id/rateLimitInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn có thể gửi lại mã OTP tối đa 5 lần trong 1 giờ"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Verify Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerifyOtp"
            style="@style/ButtonPrimary"
            android:text="Xác thực"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/ButtonSecondary"
            android:text="Hủy giao dịch"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Loading Progress -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
