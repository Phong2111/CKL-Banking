<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:title="Chi tiết giao dịch"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_back"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Status Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/CardStyle"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <!-- Status Icon -->
                    <ImageView
                        android:id="@+id/statusIcon"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_success"
                        app:tint="@color/success"/>

                    <!-- Status Text -->
                    <TextView
                        android:id="@+id/statusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giao dịch thành công"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/success"
                        android:layout_marginTop="16dp"/>

                    <!-- Amount -->
                    <TextView
                        android:id="@+id/transactionAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- 500,000 ₫"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="8dp"/>

                    <!-- Transaction Type -->
                    <TextView
                        android:id="@+id/transactionType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chuyển tiền"
                        style="@style/TextCaption"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Transaction Details -->
            <com.google.android.material.card.MaterialCardView
                style="@style/CardStyle"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin giao dịch"
                        style="@style/TextSubtitle"
                        android:layout_marginBottom="16dp"/>

                    <!-- Transaction ID -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mã giao dịch"
                            style="@style/TextCaption"/>

                        <TextView
                            android:id="@+id/transactionId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TRX123456789"
                            style="@style/TextBody"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- Date Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Thời gian"
                            style="@style/TextCaption"/>

                        <TextView
                            android:id="@+id/transactionDateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21/11/2025 14:30"
                            style="@style/TextBody"/>
                    </LinearLayout>

                    <!-- From Account -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Từ tài khoản"
                            style="@style/TextCaption"/>

                        <TextView
                            android:id="@+id/fromAccount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0123456789"
                            style="@style/TextBody"/>
                    </LinearLayout>

                    <!-- To Account -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Đến tài khoản"
                            style="@style/TextCaption"/>

                        <TextView
                            android:id="@+id/toAccount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9876543210"
                            style="@style/TextBody"/>
                    </LinearLayout>

                    <!-- Recipient Name -->
                    <LinearLayout
                        android:id="@+id/recipientLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Người nhận"
                            style="@style/TextCaption"/>

                        <TextView
                            android:id="@+id/recipientName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nguyễn Văn A"
                            style="@style/TextBody"/>
                    </LinearLayout>

                    <!-- Message -->
                    <LinearLayout
                        android:id="@+id/messageLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nội dung"
                            style="@style/TextCaption"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/transactionMessage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chuyển tiền"
                            style="@style/TextBody"
                            android:background="@color/background"
                            android:padding="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Fee Information (if applicable) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/feeCard"
                style="@style/CardStyle"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chi phí"
                        style="@style/TextSubtitle"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Phí giao dịch"
                            style="@style/TextCaption"/>

                        <TextView
                            android:id="@+id/transactionFee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 ₫"
                            style="@style/TextBody"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShare"
                    style="@style/ButtonSecondary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Chia sẻ"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDownload"
                    style="@style/ButtonSecondary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Tải biên lai"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
