<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:title="Chuyển tiền"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_launcher_foreground"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Transfer Type Selection -->
            <com.google.android.material.card.MaterialCardView
                style="@style/CardStyle"
                android:layout_margin="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loại chuyển tiền"
                        style="@style/TextSubtitle"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/transferTypeChipGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:selectionRequired="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipInternalTransfer"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nội bộ CKL Bank"
                            android:checked="true"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipExternalTransfer"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Liên ngân hàng"/>
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- From Account -->
            <com.google.android.material.card.MaterialCardView
                style="@style/CardStyle"
                android:layout_margin="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Từ tài khoản"
                        style="@style/TextSubtitle"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:id="@+id/fromAccountLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="?attr/selectableItemBackground"
                        android:padding="12dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="match_parent"
                            android:background="@color/checking_account"
                            android:layout_marginEnd="12dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fromAccountName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tài khoản thanh toán"
                                style="@style/TextBody"/>

                            <TextView
                                android:id="@+id/fromAccountNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="**** **** 1234"
                                style="@style/TextCaption"
                                android:layout_marginTop="4dp"/>

                            <TextView
                                android:id="@+id/fromAccountBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số dư: 100,000,000 ₫"
                                android:textColor="@color/success"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_launcher_foreground"
                            app:tint="@color/text_hint"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Recipient Info -->
            <com.google.android.material.card.MaterialCardView
                style="@style/CardStyle"
                android:layout_margin="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin người nhận"
                        style="@style/TextSubtitle"
                        android:layout_marginBottom="12dp"/>

                    <!-- Bank Selection (for external transfer) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutBankName"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Ngân hàng"
                        android:visibility="gone">

                        <AutoCompleteTextView
                            android:id="@+id/bankNameDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Account Number -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutRecipientAccount"
                        style="@style/InputField"
                        android:hint="Số tài khoản người nhận"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/ic_launcher_foreground">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editRecipientAccount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Recipient Name (auto-filled after verification) -->
                    <LinearLayout
                        android:id="@+id/recipientNameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/primary_light"
                        android:padding="12dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_launcher_foreground"
                            app:tint="@color/success"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Người nhận"
                                style="@style/TextCaption"/>

                            <TextView
                                android:id="@+id/recipientName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nguyễn Văn B"
                                style="@style/TextBody"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Amount -->
            <com.google.android.material.card.MaterialCardView
                style="@style/CardStyle"
                android:layout_margin="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số tiền chuyển"
                        style="@style/TextSubtitle"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutAmount"
                        style="@style/InputField"
                        android:layout_marginBottom="0dp"
                        android:hint="Nhập số tiền">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Quick Amount Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAmount100k"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:text="100k"
                            android:textSize="12sp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAmount500k"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:text="500k"
                            android:textSize="12sp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAmount1M"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:text="1tr"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <!-- Fee Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Phí giao dịch"
                            style="@style/TextCaption"/>

                        <TextView
                            android:id="@+id/transactionFee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Miễn phí"
                            android:textColor="@color/success"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Message -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutMessage"
                style="@style/InputField"
                android:hint="Nội dung chuyển tiền (không bắt buộc)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="2"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Save Recipient -->
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkSaveRecipient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lưu người nhận vào danh sách thường dùng"
                android:layout_marginBottom="24dp"/>

            <!-- Transfer Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTransfer"
                style="@style/ButtonPrimary"
                android:text="Tiếp tục"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Loading Progress -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
